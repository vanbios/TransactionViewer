<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_list_selector"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_padding_medium"
    android:paddingLeft="@dimen/common_padding_large"
    android:paddingRight="@dimen/common_padding_large"
    android:paddingTop="@dimen/common_padding_medium">

    <TextView
        android:id="@+id/tvItemListTitle"
        style="@style/TitleFontBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C7891" />

    <TextView
        android:id="@+id/tvItemListSubTitle"
        style="@style/SubTitleFontGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="487 transactions" />

</LinearLayout>